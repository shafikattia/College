@model List<TraineeCoursesViewModel>
<div class="containerr">
    <h1 id="h1">Student information</h1>
    <table class="student-table">
        <thead>
            <tr>
                <td>Trainee id </td>
                <td>Trainee Name</td>
                <td>Course Name</td>
                <td>Course degree</td>
                <td> state</td>

            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.TranieeId</td>
                    <td>@item.TraineeName</td>
                    <td> @item.CourseName </td>
                    <td>@item.Degree</td>
                    @if (@item.Degree <= 80)
                    {
                        <td id="td1">filed</td>
                    }
                    else
                    {
                        <td>pass</td>
                    }

                </tr>
                   
            }
      
         
        </tbody>
    </table>
    <a asp-action="AddNewTrainee" asp-controller="Trainee" class="btn btn-alert-success">add</a>
</div>
<style>
    #hd1{
        color: red;
    }
    #img1 {
        border-radius: 50px;
        width: 150px;
        height: 150px;
    }



    .containerr {
        margin background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

    #h1 {
        margin-bottom: 20px;
        color: #333;
    }

    .student-table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
    }

        .student-table th, .student-table td {
            border: 1px solid #ddd;
            padding: 8px;
        }

        .student-table th {
            background-color: #f2f2f2;
            color: #333;
        }

        .student-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .student-table tr:hover {
            background-color: #f1f1f1;
        }

        .student-table th {
            padding-top: 12px;
            padding-bottom: 12px;
            text-align: left;
        }

    .delete-btn {
        background: none;
        border: none;
        color: #d9534f;
        font-size: 16px;
        cursor: pointer;
    }

        .delete-btn:hover {
            color: #c9302c;
        }
</style>
